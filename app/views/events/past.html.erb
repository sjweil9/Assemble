<% content_for :title, "Past Events" %>

<div class="container events">
    <div id="events_overlay" class="col-12">
        <h1>Hey, <%= @user.first %>, longing for the past?</h1>

        <h3>Here are all the cool events people already assembled for.</h3>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>State</th>
                        <th>Host</th>
                    </tr>
                </thead>
                <tbody>
                    <% @events.each do |event| %>
                    <tr>
                        <td><%= event.name %></td>
                        <td><%= event.date.strftime("%a %b #{event.date.day.ordinalize}, %Y") %></td>
                        <td><%= event.location %></td>
                        <td><%= event.state %></td>
                        <td><%= event.user.first %> <%= event.user.last %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary" href="<%= events_path %>">
            Come Back to the Present
        </a>
    </div>
</div>